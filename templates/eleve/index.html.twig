{% extends 'base.html.twig' %}

{% block title %}Eleve index
{% endblock %}

{% block body %}
	<h1>Eleve index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id_eleve</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Date_naiss</th>
				<th>Classe</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for eleve in eleves %}
				<tr>
					<td>{{ eleve.id }}</td>
					<td>{{ eleve.nom }}</td>
					<td>{{ eleve.prenom }}</td>
					<td>{{ eleve.dateNaiss ? eleve.dateNaiss|date('Y-m-d') : '' }}</td>
					<td>{{ eleve.classe }}</td>
					<td>
						<a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
						<a href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('eleve_new') }}">Create new</a>
{% endblock %}
